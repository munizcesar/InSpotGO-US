---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { FileText } from 'lucide-astro';

const allPosts = await getCollection('posts');
const sortedPosts = allPosts.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

const categoryColors: Record<string, string> = {
  Tech: 'var(--color-primary)',
  SaaS: '#8b5cf6',
  Software: '#10b981',
  Guides: '#f59e0b',
};
---

<BaseLayout title="All Articles | InSpotGO" description="Browse all professional tech reviews, SaaS comparisons, software analysis, and buying guides from InSpotGO.">
  <section class="page-hero">
    <div class="container">
      <div class="hero-content">
        <div class="hero-icon">
          <FileText size={64} stroke-width={1.5} />
        </div>
        <h1>All Articles</h1>
        <p>Browse {sortedPosts.length} professional reviews, comparisons, and buying guides</p>
      </div>
    </div>
  </section>

  <section class="filter-section">
    <div class="container">
      <div class="filters">
        <button class="filter-btn active" data-filter="all">All Articles</button>
        <button class="filter-btn" data-filter="Tech">Tech</button>
        <button class="filter-btn" data-filter="SaaS">SaaS</button>
        <button class="filter-btn" data-filter="Software">Software</button>
        <button class="filter-btn" data-filter="Guides">Guides</button>
      </div>
    </div>
  </section>

  <section class="posts-section">
    <div class="container">
      <div class="posts-grid">
        {sortedPosts.map((post) => {
          const date = new Date(post.data.date);
          const categoryColor = categoryColors[post.data.category] || 'var(--color-primary)';
          
          return (
            <article class="post-card" data-category={post.data.category}>
              <a href={`/posts/${post.slug}`} class="post-link">
                <div class="post-image">
                  <img src={post.data.cover || '/images/default-post.jpg'} alt={post.data.title} loading="lazy" />
                  <span class="post-badge" style={`background: ${categoryColor}`}>
                    {post.data.category}
                  </span>
                </div>
                <div class="post-content">
                  <h2 class="post-title">{post.data.title}</h2>
                  <p class="post-description">{post.data.description}</p>
                  <div class="post-meta">
                    <span class="post-date">{date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</span>
                    {post.data.readTime && <span class="post-read-time">{post.data.readTime}</span>}
                  </div>
                </div>
              </a>
            </article>
          );
        })}
      </div>
      
      <div class="no-results" style="display: none;">
        <p>No articles found in this category.</p>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  // Category filtering
  const filterButtons = document.querySelectorAll('.filter-btn');
  const postCards = document.querySelectorAll('.post-card');
  const noResults = document.querySelector('.no-results') as HTMLElement;
  
  filterButtons.forEach(button => {
    button.addEventListener('click', () => {
      const filter = button.getAttribute('data-filter');
      
      // Update active button
      filterButtons.forEach(btn => btn.classList.remove('active'));
      button.classList.add('active');
      
      // Filter posts
      let visibleCount = 0;
      postCards.forEach((card: Element) => {
        const htmlCard = card as HTMLElement;
        const category = htmlCard.getAttribute('data-category');
        
        if (filter === 'all' || category === filter) {
          htmlCard.style.display = 'block';
          visibleCount++;
        } else {
          htmlCard.style.display = 'none';
        }
      });
      
      // Show/hide no results message
      if (noResults) {
        noResults.style.display = visibleCount === 0 ? 'block' : 'none';
      }
    });
  });
</script>

<style>
  .page-hero {
    background: var(--gradient-hero);
    color: white;
    padding: 4rem 0 3rem;
    text-align: center;
  }
  
  .hero-content {
    max-width: 700px;
    margin: 0 auto;
  }
  
  .hero-icon {
    margin-bottom: 1.5rem;
    opacity: 0.9;
  }
  
  .page-hero h1 {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 1rem;
  }
  
  .page-hero p {
    font-size: 1.25rem;
    opacity: 0.9;
  }
  
  /* Filters */
  .filter-section {
    background: var(--color-bg-alt);
    padding: 2rem 0;
    border-bottom: 1px solid var(--color-border);
  }
  
  .filters {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .filter-btn {
    padding: 0.75rem 1.5rem;
    background: white;
    border: 2px solid var(--color-border);
    border-radius: var(--radius-full);
    font-weight: 600;
    font-size: 0.95rem;
    color: var(--color-text);
    cursor: pointer;
    transition: all var(--transition-base);
  }
  
  .filter-btn:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
  }
  
  .filter-btn.active {
    background: var(--gradient-action);
    border-color: transparent;
    color: white;
  }
  
  /* Posts */
  .posts-section {
    padding: 4rem 0;
  }
  
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: 2rem;
  }
  
  .post-card {
    background: white;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: all var(--transition-base);
  }
  
  .post-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }
  
  .post-link {
    text-decoration: none;
    display: block;
  }
  
  .post-image {
    position: relative;
    padding-top: 56.25%;
    overflow: hidden;
  }
  
  .post-image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .post-card:hover .post-image img {
    transform: scale(1.05);
  }
  
  .post-badge {
    position: absolute;
    top: 1rem;
    left: 1rem;
    padding: 0.375rem 0.875rem;
    color: white;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: var(--radius-full);
    z-index: 1;
  }
  
  .post-content {
    padding: 1.5rem;
  }
  
  .post-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text);
    margin: 0 0 0.75rem 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .post-card:hover .post-title {
    color: var(--color-primary);
  }
  
  .post-description {
    font-size: 0.95rem;
    color: var(--color-text-light);
    line-height: 1.6;
    margin: 0 0 1rem 0;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .post-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    padding-top: 1rem;
    border-top: 1px solid var(--color-border);
  }
  
  .no-results {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--color-text-light);
    font-size: 1.125rem;
  }
  
  @media (max-width: 768px) {
    .page-hero h1 {
      font-size: 2rem;
    }
    
    .posts-grid {
      grid-template-columns: 1fr;
    }
    
    .filters {
      justify-content: flex-start;
      overflow-x: auto;
      padding-bottom: 0.5rem;
    }
    
    .filter-btn {
      white-space: nowrap;
    }
  }
</style>
