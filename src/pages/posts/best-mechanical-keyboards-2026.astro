---
export const prerender = true;

export function get() {
  // include a small HTML body so users seeing this URL directly aren’t left staring at a blank screen
  const body = `<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="refresh" content="0;url=/posts/best-mechanical-keyboards/">
  <title>Redirecting...</title>
</head>
<body>
  <p>Redirecting to <a href="/posts/best-mechanical-keyboards/">best-mechanical-keyboards</a>…</p>
</body>
</html>`;

  return new Response(body, {
    status: 301,
    headers: {
      'location': '/posts/best-mechanical-keyboards/',
      'Content-Type': 'text/html; charset=utf-8'
    }
  });
}
