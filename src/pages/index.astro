---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import TrustBar from '../components/TrustBar.astro';
import ProductCard from '../components/ProductCard.astro';
import CookieBanner from '../components/CookieBanner.astro';
---
<BaseLayout title="InSpotGO: Smart Product Discovery" description="Curated deals and trusted reviews for US consumers" canonical={Astro.site}>
  <Header />
  <main class="container" style="padding:2rem 0;">
    <div style="background:#fff;padding:2rem;border-radius:8px;margin-bottom:1rem;" role="region" aria-label="Hero">
      <div style="display:flex;flex-wrap:wrap;gap:1.5rem;align-items:center;justify-content:space-between;">
        <div style="color:var(--color-text-muted);font-size:0.9rem;width:100%;margin-bottom:0.5rem;">Disclosure: This page contains affiliate links. We may earn a commission if you purchase through our links.</div>
        
        <div class="notranslate" style="display:flex;align-items:center;gap:0.5rem;flex-shrink:0;">
          <span style="font-size:1.25rem;font-weight:700;color:var(--color-primary);">[ LOGO</span>
          <span style="font-size:1.25rem;font-weight:700;color:var(--color-primary);">InSpot</span><span style="font-size:1.25rem;font-weight:700;color:var(--color-accent);">GO</span>
          <span style="font-size:1.25rem;font-weight:700;color:var(--color-primary);">]</span>
        </div>

        <div style="flex:1;min-width:300px;">
          <p style="font-size:1.1rem;font-weight:700;color:var(--color-primary);margin:0 0 0.5rem 0;">Choose right. Go confident.</p>
          <p style="font-size:0.95rem;color:var(--color-text);margin:0;">Independent reviews to help you pick the best product.</p>
        </div>

        <div style="display:flex;gap:0.75rem;flex-shrink:0;flex-wrap:wrap;justify-content:flex-end;">
          <a class="cta-primary" href="/posts" style="white-space:nowrap;">Browse Reviews</a>
          <a class="cta-secondary" href="/editorial-policy" style="white-space:nowrap;">Best Picks</a>
        </div>
      </div>
    </div>

    <TrustBar />

    <section style="margin-top:1.25rem;">
      <h2>Featured Deals</h2>
      <div class="grid grid-3" style="margin-top:.75rem;">
        <ProductCard title="Sample Product A" category="Electronics" price="$129.99" rating="4.6" />
        <ProductCard title="Sample Product B" category="Home" price="$49.99" rating="4.4" />
        <ProductCard title="Sample Product C" category="Fitness" price="$79.99" rating="4.7" />
        <ProductCard title="Sample Product D" category="Tech" price="$199.99" rating="4.8" />
        <ProductCard title="Sample Product E" category="Kitchen" price="$24.99" rating="4.3" />
        <ProductCard title="Sample Product F" category="Outdoors" price="$59.99" rating="4.5" />
      </div>
    </section>

    <section style="margin-top:2rem;">
      <h2>Guides</h2>
      <div class="grid grid-3" style="margin-top:.75rem;">
        <a class="card" href="/posts/best-budget-smartphones-2026">Best Budget Smartphones 2026</a>
        <a class="card" href="/posts/top-kitchen-gadgets-2026">Top Kitchen Gadgets 2026</a>
        <a class="card" href="/posts/fitness-gear-guide-2026">Fitness Gear Guide 2026</a>
        <a class="card" href="/posts/home-office-essentials-2026">Home Office Essentials 2026</a>
        <a class="card" href="/posts/outdoor-gear-2026">Outdoor Gear 2026</a>
        <a class="card" href="/posts/smart-home-basics-2026">Smart Home Basics 2026</a>
      </div>
    </section>
  </main>

  <Footer />
  <CookieBanner />
</BaseLayout>
