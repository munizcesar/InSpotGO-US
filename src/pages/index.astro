---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_CONFIG } from '../config';
import CategoryCard from '../components/CategoryCard.astro';
import LatestNewsSection from '../components/LatestNewsSection.astro';
import { Target, BarChart3, Lightbulb, CheckCircle2, Search, Users, RefreshCw } from 'lucide-astro';
import { getCollection } from 'astro:content';

// JSON-LD for AI Overviews (SGE) - boosts discoverability in search
const siteUrl = SITE_CONFIG.url;
const homepageSchema = [
  {
    '@context': 'https://schema.org',
    '@type': 'WebSite',
    '@id': `${siteUrl}/#website`,
    url: siteUrl,
    name: SITE_CONFIG.name,
    description: SITE_CONFIG.description,
    publisher: { '@id': `${siteUrl}/#organization` },
    potentialAction: {
      '@type': 'SearchAction',
      target: { '@type': 'EntryPoint', urlTemplate: `${siteUrl}/posts?q={search_term_string}` },
      'query-input': 'required name=search_term_string',
    },
    inLanguage: 'en-US',
  },
  {
    '@context': 'https://schema.org',
    '@type': 'Organization',
    '@id': `${siteUrl}/#organization`,
    name: SITE_CONFIG.name,
    url: siteUrl,
    logo: { '@type': 'ImageObject', url: `${siteUrl}/logo.png` },
    foundingDate: String(SITE_CONFIG.foundedYear),
    description: SITE_CONFIG.tagline,
  },
  {
    '@context': 'https://schema.org',
    '@type': 'ItemList',
    itemListElement: [
      { '@type': 'ListItem', position: 1, name: 'Tech Products', url: `${siteUrl}/tech` },
      { '@type': 'ListItem', position: 2, name: 'SaaS Tools', url: `${siteUrl}/saas` },
      { '@type': 'ListItem', position: 3, name: 'Software', url: `${siteUrl}/software` },
      { '@type': 'ListItem', position: 4, name: 'Buying Guides', url: `${siteUrl}/guides` },
    ],
  },
];

const allPosts = await getCollection('posts');

// Sort posts: featured first, then by date
const sortedPosts = allPosts.sort((a, b) => {
  // Featured posts come first
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;
  
  // Then sort by date (newest first)
  const dateA = new Date(a.data.date);
  const dateB = new Date(b.data.date);
  return dateB.getTime() - dateA.getTime();
});

// Transform posts to Article format for LatestNewsSection
const articles = sortedPosts.map((post) => {
  const date = new Date(post.data.date);
  
  return {
    title: post.data.title,
    description: post.data.description,
    category: post.data.category || 'Tech',
    image: post.data.cover || '/images/default-post.jpg',
    href: `/posts/${post.slug}`,
    date: date.toLocaleDateString('en-US', {
      month: 'short',
      day: 'numeric',
      year: 'numeric'
    }),
    readTime: post.data.readTime || '5 min',
    featured: post.data.featured || false,
  };
});
---

<BaseLayout extraSchema={homepageSchema}>
  <!-- Hero Section (semantic HTML5: header for introductory content) -->
  <header class="hero">
    <div class="container">
      <div class="hero-content">
        <h1>
          <span class="hero-title">
            <span class="hero-spot">InSpot</span><span class="hero-go">GO</span>
          </span>
          <span class="hero-slogan">
            Spot the Best. <span class="go-emphasis">GO</span> Confident.
          </span>
        </h1>
        <p class="hero-description">
          {SITE_CONFIG.description}
        </p>
        <div class="hero-cta">
          <a href="#latest-news" class="btn btn-primary">Explore Reviews</a>
          <a href="/about" class="btn btn-outline">Learn More</a>
        </div>
      </div>
    </div>
  </header>

  <!-- Latest News & Trending (moved before Categories) -->
  <section id="latest-news">
    <LatestNewsSection articles={articles} />
  </section>

  <!-- Categories Section -->
  <section class="categories" id="categories">
    <div class="container">
      <h2 class="section-title">What We Review</h2>
      <p class="section-subtitle">
        Professional analysis and buying guides to help you make informed decisions
      </p>
      
      <div class="categories-grid">
        <CategoryCard
          title={SITE_CONFIG.categories.tech.name}
          description={SITE_CONFIG.categories.tech.description}
          icon={SITE_CONFIG.categories.tech.icon}
          href="/tech"
        />
        <CategoryCard
          title={SITE_CONFIG.categories.saas.name}
          description={SITE_CONFIG.categories.saas.description}
          icon={SITE_CONFIG.categories.saas.icon}
          href="/saas"
        />
        <CategoryCard
          title={SITE_CONFIG.categories.software.name}
          description={SITE_CONFIG.categories.software.description}
          icon={SITE_CONFIG.categories.software.icon}
          href="/software"
        />
        <CategoryCard
          title={SITE_CONFIG.categories.guides.name}
          description={SITE_CONFIG.categories.guides.description}
          icon={SITE_CONFIG.categories.guides.icon}
          href="/guides"
        />
      </div>
    </div>
  </section>

  <!-- Why Trust Us Section -->
  <section class="trust">
    <div class="container">
      <h2 class="section-title">Why Trust InSpotGO?</h2>
      
      <div class="trust-grid">
        <div class="trust-item">
          <div class="trust-icon">
            <CheckCircle2 size={56} stroke-width={1.5} />
          </div>
          <h3>Professional Analysis</h3>
          <p>Evidence-based reviews following journalistic standards with benchmark testing and technical verification</p>
        </div>
        <div class="trust-item">
          <div class="trust-icon">
            <Search size={56} stroke-width={1.5} />
          </div>
          <h3>Comprehensive Research</h3>
          <p>Every review backed by extensive testing, specification analysis, and industry comparison</p>
        </div>
        <div class="trust-item">
          <div class="trust-icon">
            <Users size={56} stroke-width={1.5} />
          </div>
          <h3>Reader-Focused</h3>
          <p>Objective recommendations prioritizing user needs over affiliate commissions</p>
        </div>
        <div class="trust-item">
          <div class="trust-icon">
            <RefreshCw size={56} stroke-width={1.5} />
          </div>
          <h3>Regularly Updated</h3>
          <p>Content refreshed with latest pricing, specifications, and market developments</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Editorial Standards Section -->
  <section class="featured">
    <div class="container">
      <h2 class="section-title">Our Editorial Standards</h2>
      <p class="section-subtitle">
        Professional tech journalism with transparent methodology and expert analysis
      </p>
      
      <div class="coming-soon-grid">
        <div class="coming-soon-card">
          <div class="card-icon">
            <Target size={48} stroke-width={1.5} />
          </div>
          <h3>In-Depth Reviews</h3>
          <p>Detailed technical analysis with specifications, benchmarks, and real-world testing results</p>
        </div>
        <div class="coming-soon-card">
          <div class="card-icon">
            <BarChart3 size={48} stroke-width={1.5} />
          </div>
          <h3>Comparison Guides</h3>
          <p>Data-driven comparisons with performance metrics and feature analysis</p>
        </div>
        <div class="coming-soon-card">
          <div class="card-icon">
            <Lightbulb size={48} stroke-width={1.5} />
          </div>
          <h3>Expert Insights</h3>
          <p>Professional buying guides and technical tutorials from experienced reviewers</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <h2>Ready to Make Informed Decisions?</h2>
      <p>Explore our professional reviews and analysis to find the perfect products</p>
      <a href="#latest-news" class="btn btn-cta">Browse Latest Reviews â†’</a>
    </div>
  </section>
</BaseLayout>

<style>
  /* ============================================
     Hero Section - Premium Gradient
     ============================================ */
  .hero {
    background: var(--gradient-hero);
    color: white;
    padding: 6rem 0;
    text-align: center;
  }
  
  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .hero-title {
    display: block;
    font-size: 3.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
  }
  
  /* Dual-color logo in hero */
  .hero-spot {
    color: white;
  }
  
  .hero-go {
    background: var(--gradient-logo-go);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .hero-slogan {
    display: block;
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    opacity: 0.95;
  }
  
  .go-emphasis {
    font-weight: 700;
    color: #fbbf24;
  }
  
  .hero-description {
    font-size: 1.25rem;
    line-height: 1.6;
    margin-bottom: 2.5rem;
    opacity: 0.9;
  }
  
  .hero-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  /* ============================================
     Buttons - Premium Gradient Style
     ============================================ */
  .btn {
    display: inline-block;
    padding: 1rem 2rem;
    font-size: 1.1rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: var(--radius-md);
    transition: all var(--transition-base);
    border: 2px solid transparent;
  }
  
  /* Primary CTA - Gradient */
  .btn-primary {
    background: var(--gradient-action);
    color: white;
    box-shadow: 0 4px 12px rgba(249, 115, 22, 0.3);
  }
  
  .btn-primary:hover {
    background: var(--gradient-action-hover);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(249, 115, 22, 0.4);
  }
  
  /* Outline button - White on gradient */
  .btn-outline {
    background: transparent;
    color: white;
    border: 2px solid white;
  }
  
  .btn-outline:hover {
    background: white;
    color: var(--color-primary);
  }
  
  /* CTA section button */
  .btn-cta {
    background: white;
    color: var(--color-primary);
    font-size: 1.2rem;
    padding: 1.25rem 2.5rem;
    border-radius: var(--radius-lg);
  }
  
  .btn-cta:hover {
    background: #f7f7f7;
    transform: translateY(-2px);
    box-shadow: 0 6px 24px rgba(0, 0, 0, 0.2);
  }

  /* ============================================
     Categories Section - Grid Layout
     ============================================ */
  .categories {
    background: var(--color-bg-alt);
    padding: 5rem 0;
  }
  
  .section-title {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--color-text);
    margin-bottom: 0.75rem;
    text-align: center;
  }
  
  .section-subtitle {
    font-size: 1.125rem;
    color: var(--color-text-light);
    max-width: 700px;
    margin: 0 auto 3rem;
    text-align: center;
  }
  
  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }
  
  @media (max-width: 768px) {
    .categories {
      padding: 3rem 0;
    }
    
    .section-title {
      font-size: 2rem;
    }
    
    .categories-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }

  /* ============================================
     Trust Section - 4-Column Grid
     ============================================ */
  .trust {
    background: white;
    padding: 5rem 0;
  }
  
  .trust-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    margin-top: 3rem;
  }
  
  .trust-item {
    text-align: center;
    padding: 2rem 1.5rem;
    background: var(--color-bg-alt);
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
    border: 1px solid var(--color-border);
  }
  
  .trust-item:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-primary-light);
  }
  
  .trust-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: var(--gradient-action);
    border-radius: var(--radius-full);
    margin: 0 auto 1.5rem;
    color: white;
  }
  
  .trust-item h3 {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 0.75rem;
  }
  
  .trust-item p {
    font-size: 0.95rem;
    color: var(--color-text-light);
    line-height: 1.6;
  }
  
  @media (max-width: 768px) {
    .trust {
      padding: 3rem 0;
    }
    
    .trust-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }

  /* ============================================
     Editorial Standards Section - 3-Column Grid
     ============================================ */
  .featured {
    background: var(--color-bg-alt);
    padding: 5rem 0;
  }
  
  .coming-soon-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2.5rem;
    margin-top: 3rem;
  }
  
  .coming-soon-card {
    background: white;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: 2.5rem 2rem;
    text-align: center;
    transition: all var(--transition-base);
    box-shadow: var(--shadow-sm);
  }
  
  .coming-soon-card:hover {
    transform: translateY(-6px);
    box-shadow: var(--shadow-xl);
    border-color: var(--color-primary);
  }
  
  .card-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 72px;
    height: 72px;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-light) 100%);
    border-radius: var(--radius-lg);
    margin: 0 auto 1.5rem;
    color: white;
  }
  
  .coming-soon-card h3 {
    font-size: 1.375rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 0.875rem;
  }
  
  .coming-soon-card p {
    font-size: 0.975rem;
    color: var(--color-text-light);
    line-height: 1.65;
  }
  
  @media (max-width: 768px) {
    .featured {
      padding: 3rem 0;
    }
    
    .coming-soon-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }

  /* ============================================
     CTA Section - Centered
     ============================================ */
  .cta-section {
    background: var(--gradient-hero);
    padding: 5rem 0;
    text-align: center;
    color: white;
  }
  
  .cta-section h2 {
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
  }
  
  .cta-section p {
    font-size: 1.25rem;
    margin-bottom: 2.5rem;
    opacity: 0.95;
  }
  
  @media (max-width: 768px) {
    .cta-section {
      padding: 3rem 0;
    }
    
    .cta-section h2 {
      font-size: 2rem;
    }
    
    .cta-section p {
      font-size: 1.125rem;
    }
  }
</style>
