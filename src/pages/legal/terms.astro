  <style>
    .legal-page {
      max-width: 900px;
      margin: 0 auto;
      padding: 2rem 1.5rem;
    }
    
    .legal-page h1 {
      font-size: 2.5rem;
      margin-bottom: 0.5rem;
      color: #1f2937;
    }
    
    .last-updated {
      color: #6b7280;
      font-style: italic;
      margin-bottom: 2rem;
    }
    
    .legal-page section {
      margin-bottom: 2.5rem;
    }
    
    .legal-page h2 {
      font-size: 1.75rem;
      margin-bottom: 1rem;
      color: #374151;
      border-bottom: 2px solid #e5e7eb;
      padding-bottom: 0.5rem;
    }
    
    .legal-page h3 {
      font-size: 1.25rem;
      margin: 1.5rem 0 0.75rem;
      color: #4b5563;
    }
    
    .legal-page p {
      margin-bottom: 1rem;
      line-height: 1.7;
    }
    
    .legal-page ul {
      margin-left: 2rem;
      margin-bottom: 1rem;
    }
    
    .legal-page li {
      margin-bottom: 0.5rem;
    }
    
    .legal-page a {
      color: #2563eb;
      text-decoration: underline;
    }
    
    .legal-page a:hover {
      color: #1d4ed8;
    }
    
    .jurisdiction {
      background: #f9fafb;
      padding: 1.5rem;
      border-radius: 0.5rem;
      border-left: 4px solid #2563eb;
    }
    
    @media (max-width: 768px) {
      .legal-page h1 {
        font-size: 2rem;
      }
      
      .legal-page h2 {
        font-size: 1.5rem;
      }
    }
  </style>
</BaseLayout>
