<style>
  .content-page {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }
  
  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }
  
  .last-updated {
    color: var(--color-text-light);
    font-size: 0.9rem;
    margin-bottom: 2rem;
  }
  
  section {
    margin: 3rem 0;
  }
  
  h2 {
    font-size: 1.75rem;
    margin-bottom: 1rem;
    margin-top: 2.5rem;
    color: var(--color-text);
  }
  
  h3 {
    font-size: 1.25rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: var(--color-text);
  }
  
  p {
    margin-bottom: 1rem;
    line-height: 1.7;
  }
  
  ul {
    margin: 1rem 0;
    padding-left: 2rem;
  }
  
  li {
    margin-bottom: 0.75rem;
    line-height: 1.7;
  }
  
  a {
    color: var(--color-primary);
    text-decoration: none;
  }
  
  a:hover {
    text-decoration: underline;
  }
  
  .legal-notice {
    background: var(--color-bg-alt);
    padding: 1.5rem;
    border-left: 4px solid var(--color-primary);
    margin-top: 3rem;
    font-weight: 600;
  }
  
  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }
  }
</style>
