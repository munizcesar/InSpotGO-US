---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { BookOpen } from 'lucide-astro';

const allPosts = await getCollection('posts');
const guidesPosts = allPosts
  .filter(post => post.data.category === 'Guides')
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<BaseLayout title="Buying Guides | InSpotGO" description="Comprehensive buying guides and how-to tutorials for making informed tech and software purchasing decisions.">
  <section class="category-hero guides">
    <div class="container">
      <div class="hero-content">
        <div class="category-icon">
          <BookOpen size={64} stroke-width={1.5} />
        </div>
        <h1>Buying Guides</h1>
        <p>Comprehensive how-to guides and expert buying advice for informed decisions</p>
        <div class="stats">
          <span>{guidesPosts.length} Articles</span>
        </div>
      </div>
    </div>
  </section>

  <section class="posts-section">
    <div class="container">
      <div class="posts-grid">
        {guidesPosts.map((post) => {
          const date = new Date(post.data.date);
          return (
            <article class="post-card">
              <a href={`/posts/${post.slug}`} class="post-link">
                <div class="post-image">
                  <img src={post.data.cover || '/images/default-post.jpg'} alt={post.data.title} loading="lazy" />
                  <span class="post-badge guides">Guide</span>
                </div>
                <div class="post-content">
                  <h2 class="post-title">{post.data.title}</h2>
                  <p class="post-description">{post.data.description}</p>
                  <div class="post-meta">
                    <span class="post-date">{date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</span>
                    {post.data.readTime && <span class="post-read-time">{post.data.readTime}</span>}
                  </div>
                </div>
              </a>
            </article>
          );
        })}
      </div>
      
      {guidesPosts.length === 0 && (
        <div class="no-posts">
          <p>No buying guides yet. Check back soon!</p>
        </div>
      )}
    </div>
  </section>
</BaseLayout>

<style>
  .category-hero {
    background: var(--gradient-hero);
    color: white;
    padding: 4rem 0 3rem;
    text-align: center;
  }
  
  .category-hero.guides {
    background: linear-gradient(135deg, #f59e0b 0%, #d97706 50%, #b45309 100%);
  }
  
  .hero-content {
    max-width: 700px;
    margin: 0 auto;
  }
  
  .category-icon {
    margin-bottom: 1.5rem;
    opacity: 0.9;
  }
  
  .category-hero h1 {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 1rem;
  }
  
  .category-hero p {
    font-size: 1.25rem;
    opacity: 0.9;
    margin-bottom: 1.5rem;
  }
  
  .stats {
    display: inline-flex;
    gap: 2rem;
    padding: 0.75rem 2rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-full);
    font-size: 0.95rem;
    font-weight: 600;
  }
  
  .posts-section {
    padding: 4rem 0;
  }
  
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: 2rem;
  }
  
  .post-card {
    background: white;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: all var(--transition-base);
  }
  
  .post-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }
  
  .post-link {
    text-decoration: none;
    display: block;
  }
  
  .post-image {
    position: relative;
    padding-top: 56.25%;
    overflow: hidden;
  }
  
  .post-image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .post-card:hover .post-image img {
    transform: scale(1.05);
  }
  
  .post-badge {
    position: absolute;
    top: 1rem;
    left: 1rem;
    padding: 0.375rem 0.875rem;
    color: white;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: var(--radius-full);
    z-index: 1;
  }
  
  .post-badge.guides {
    background: #f59e0b;
  }
  
  .post-content {
    padding: 1.5rem;
  }
  
  .post-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text);
    margin: 0 0 0.75rem 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .post-card:hover .post-title {
    color: #f59e0b;
  }
  
  .post-description {
    font-size: 0.95rem;
    color: var(--color-text-light);
    line-height: 1.6;
    margin: 0 0 1rem 0;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .post-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    padding-top: 1rem;
    border-top: 1px solid var(--color-border);
  }
  
  .no-posts {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--color-text-light);
    font-size: 1.125rem;
  }
  
  @media (max-width: 768px) {
    .category-hero h1 {
      font-size: 2rem;
    }
    
    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
