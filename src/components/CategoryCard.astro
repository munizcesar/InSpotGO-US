---
interface Props {
  title: string;
  description: string;
  icon: string;
  href: string;
}

const { title, description, icon, href } = Astro.props;
---

<a href={href} class="category-card">
  <div class="category-icon">{icon}</div>
  <h3 class="category-title">{title}</h3>
  <p class="category-description">{description}</p>
  <span class="category-arrow">â†’</span>
</a>

<style>
  .category-card {
    display: block;
    padding: 2.5rem;
    background: white;
    border-radius: 12px;
    border: 2px solid var(--color-border);
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }
  
  /* Orange accent bar on hover (action color) */
  .category-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, var(--color-action), var(--color-action-light));
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }
  
  .category-card:hover {
    border-color: var(--color-action);
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(249, 115, 22, 0.15);
  }
  
  .category-card:hover::before {
    transform: scaleX(1);
  }
  
  .category-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .category-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 0.75rem;
  }
  
  .category-description {
    color: var(--color-text-light);
    line-height: 1.6;
    margin-bottom: 1rem;
  }
  
  .category-arrow {
    display: inline-block;
    font-size: 1.5rem;
    color: var(--color-action);
    transition: transform 0.3s ease;
  }
  
  .category-card:hover .category-arrow {
    transform: translateX(8px);
    color: var(--color-action-dark);
  }
</style>
