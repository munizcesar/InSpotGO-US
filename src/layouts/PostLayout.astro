---
import BaseLayout from './BaseLayout.astro';
const { frontmatter, content } = Astro.props;
---
<BaseLayout title={frontmatter.title} description={frontmatter.description} canonical={`${Astro.site || ''}${Astro.url.pathname}`}>
  <main class="container post-container">
    <article class="post-article card" itemScope itemType="https://schema.org/Article">
      {frontmatter.cover && (
        <img src={frontmatter.cover} alt={frontmatter.title} class="post-cover" loading="lazy" />
      )}
      <h1 class="post-title" itemProp="headline">{frontmatter.title}</h1>
      <div class="post-meta">
        <time dateTime={frontmatter.date}>{frontmatter.date}</time>
        {frontmatter.category && (
          <span class="post-category">{frontmatter.category}</span>
        )}
      </div>
      <div class="post-content">
        <slot />
      </div>
    </article>
  </main>
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context":"https://schema.org",
    "@type":"Article",
    "headline": frontmatter.title,
    "datePublished": frontmatter.date,
    "author": {"@type":"Organization","name":"InSpotGO"}
  })} />
</BaseLayout>

<style>
  .post-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }

  .post-article {
    padding: 2.5rem;
    background: white;
    border-radius: 12px;
  }

  .post-cover {
    width: 100%;
    max-width: 100%;
    height: auto;
    display: block;
    margin: 0 auto 2rem auto;
    border-radius: 12px;
    object-fit: cover;
  }

  .post-title {
    font-size: 2.5rem;
    line-height: 1.2;
    margin-bottom: 1rem;
    color: var(--color-text);
    font-weight: 800;
  }

  .post-meta {
    color: var(--color-text-light);
    font-size: 0.95rem;
    margin-bottom: 2.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--color-border);
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .post-category {
    background: var(--color-bg-alt);
    color: var(--color-primary);
    border-radius: 6px;
    padding: 4px 12px;
    font-size: 0.85rem;
    font-weight: 600;
  }

  /* Markdown Content Styles */
  .post-content {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-text);
  }

  .post-content :global(h1) {
    font-size: 2.25rem;
    font-weight: 700;
    margin: 2.5rem 0 1.25rem 0;
    line-height: 1.3;
    color: var(--color-text);
  }

  .post-content :global(h2) {
    font-size: 1.875rem;
    font-weight: 700;
    margin: 2.25rem 0 1rem 0;
    line-height: 1.3;
    color: var(--color-text);
  }

  .post-content :global(h3) {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 2rem 0 0.875rem 0;
    line-height: 1.4;
    color: var(--color-text);
  }

  .post-content :global(h4) {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 1.75rem 0 0.75rem 0;
    line-height: 1.4;
    color: var(--color-text);
  }

  .post-content :global(p) {
    margin: 1.25rem 0;
    line-height: 1.8;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin: 1.25rem 0;
    padding-left: 2rem;
  }

  .post-content :global(li) {
    margin: 0.75rem 0;
    line-height: 1.7;
  }

  .post-content :global(li > ul),
  .post-content :global(li > ol) {
    margin-top: 0.5rem;
  }

  .post-content :global(strong) {
    font-weight: 700;
    color: var(--color-text);
  }

  .post-content :global(em) {
    font-style: italic;
  }

  .post-content :global(a) {
    color: var(--color-primary);
    text-decoration: underline;
    text-underline-offset: 3px;
    transition: color 0.2s ease;
  }

  .post-content :global(a:hover) {
    color: var(--color-primary-dark);
  }

  .post-content :global(blockquote) {
    border-left: 4px solid var(--color-primary);
    padding: 1rem 1.5rem;
    margin: 1.5rem 0;
    background: var(--color-bg-alt);
    font-style: italic;
    color: var(--color-text-light);
  }

  .post-content :global(code) {
    background: var(--color-bg-alt);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-size: 0.9em;
    font-family: 'Monaco', 'Menlo', 'Courier New', monospace;
  }

  .post-content :global(pre) {
    background: var(--color-bg-alt);
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .post-content :global(pre code) {
    background: none;
    padding: 0;
  }

  .post-content :global(hr) {
    border: none;
    border-top: 2px solid var(--color-border);
    margin: 2.5rem 0;
  }

  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem 0;
  }

  .post-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
  }

  .post-content :global(th),
  .post-content :global(td) {
    border: 1px solid var(--color-border);
    padding: 0.75rem 1rem;
    text-align: left;
  }

  .post-content :global(th) {
    background: var(--color-bg-alt);
    font-weight: 600;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .post-container {
      padding: 1.5rem 1rem;
    }

    .post-article {
      padding: 1.5rem;
    }

    .post-title {
      font-size: 2rem;
    }

    .post-content {
      font-size: 1.0625rem;
    }

    .post-content :global(h1) {
      font-size: 1.875rem;
    }

    .post-content :global(h2) {
      font-size: 1.625rem;
    }

    .post-content :global(h3) {
      font-size: 1.375rem;
    }

    .post-content :global(h4) {
      font-size: 1.125rem;
    }
  }
</style>