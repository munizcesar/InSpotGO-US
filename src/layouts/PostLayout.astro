---
import BaseLayout from './BaseLayout.astro';
import ShareButtons from '../components/ShareButtons.astro';
const { frontmatter } = Astro.props;

// Helper to generate Amazon Search Link if specific link is missing
const getProductLink = (product) => {
  if (product.link) return product.link;
  // Fallback: Search on Amazon using our tag
  const query = encodeURIComponent(product.title);
  return `https://www.amazon.com/s?k=${query}&tag=inspotgous-20`;
};
---
<BaseLayout title={frontmatter.title} description={frontmatter.description} canonical={`${Astro.site || ''}${Astro.url.pathname}`} article={true}>
  <main class="container post-container">
    <article class="post-article card" itemScope itemType="https://schema.org/Article">
      {frontmatter.cover && (
        <img src={frontmatter.cover} alt={frontmatter.title} class="post-cover" loading="lazy" />
      )}
      <h1 class="post-title" itemProp="headline">{frontmatter.title}</h1>
      <div class="post-meta">
        <time dateTime={frontmatter.date}>{frontmatter.date}</time>
        {frontmatter.category && (
          <span class="post-category">{frontmatter.category}</span>
        )}
        {frontmatter.readTime && (
          <span class="post-read-time" style="margin-left: 10px; color: #6b7280;">• {frontmatter.readTime}</span>
        )}
      </div>

      <!-- Social Share Buttons -->
      <ShareButtons title={frontmatter.title} url={Astro.url.href} />
      
      <div class="post-content">
        <slot />
      </div>

      {/* Auto-generated Product List from Frontmatter */}
      {frontmatter.products && frontmatter.products.length > 0 && (
        <section class="products-section">
          <h2>Featured Products</h2>
          <div class="products-grid">
            {frontmatter.products.map((product) => (
              <div class="product-card-mini">
                {product.image && <img src={product.image} alt={product.title} class="product-img" />}
                <div class="product-info">
                  <h3>{product.title}</h3>
                  {product.description && <p>{product.description}</p>}
                  {product.rating && <div class="rating">⭐ {product.rating}/5</div>}
                  <a href={getProductLink(product)} target="_blank" rel="nofollow noopener sponsored" class="btn-check-price">
                    Check Price on Amazon
                  </a>
                </div>
              </div>
            ))}
          </div>
        </section>
      )}
    </article>
  </main>
  
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context":"https://schema.org",
    "@type":"Article",
    "headline": frontmatter.title,
    "datePublished": frontmatter.date,
    "author": {"@type":"Organization","name":"InSpotGO"}
  })} />
</BaseLayout>

<style>
  .post-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }

  .post-article {
    padding: 2.5rem;
    background: white;
    border-radius: 12px;
  }

  .post-cover {
    width: 100%;
    max-width: 100%;
    height: auto;
    display: block;
    margin: 0 auto 2rem auto;
    border-radius: 12px;
    object-fit: cover;
  }

  .post-title {
    font-size: 2.5rem;
    line-height: 1.2;
    margin-bottom: 1rem;
    color: var(--color-text);
    font-weight: 800;
  }

  .post-meta {
    color: var(--color-text-light);
    font-size: 0.95rem;
    margin-bottom: 1.5rem; /* Reduced margin to fit share buttons */
    padding-bottom: 0.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .post-category {
    background: var(--color-bg-alt);
    color: var(--color-primary);
    border-radius: 6px;
    padding: 4px 12px;
    font-size: 0.85rem;
    font-weight: 600;
  }

  /* Markdown Content Styles */
  .post-content {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-text);
    margin-top: 1.5rem;
  }

  /* Important: Responsive Images inside Content */
  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem 0;
    display: block;
  }
  
  /* Link Styles - Make them clear and tappable */
  .post-content :global(a) {
    color: var(--color-primary);
    text-decoration: underline;
    text-underline-offset: 3px;
    font-weight: 500;
    padding: 2px 0; /* Better touch target */
  }

  /* Image Links - Remove decoration */
  .post-content :global(a:has(img)) {
    text-decoration: none;
    border-bottom: none;
  }

  .post-content :global(h1) { font-size: 2.25rem; font-weight: 700; margin: 2.5rem 0 1.25rem 0; line-height: 1.3; }
  .post-content :global(h2) { font-size: 1.875rem; font-weight: 700; margin: 2.25rem 0 1rem 0; line-height: 1.3; }
  .post-content :global(h3) { font-size: 1.5rem; font-weight: 600; margin: 2rem 0 0.875rem 0; line-height: 1.4; }
  .post-content :global(p) { margin: 1.25rem 0; }
  .post-content :global(ul), .post-content :global(ol) { margin: 1.25rem 0; padding-left: 2rem; }
  .post-content :global(li) { margin: 0.75rem 0; }
  .post-content :global(blockquote) { border-left: 4px solid var(--color-primary); padding: 1rem 1.5rem; margin: 1.5rem 0; background: var(--color-bg-alt); font-style: italic; color: var(--color-text-light); }
  .post-content :global(pre) { background: #1e293b; color: #e2e8f0; padding: 1.5rem; border-radius: 8px; overflow-x: auto; margin: 1.5rem 0; }
  
  /* Products Section Styles */
  .products-section {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 2px solid var(--color-border);
  }
  
  .products-grid {
    display: grid;
    gap: 1.5rem;
    margin-top: 1.5rem;
  }
  
  .product-card-mini {
    display: flex;
    gap: 1.5rem;
    border: 1px solid var(--color-border);
    padding: 1.5rem;
    border-radius: 10px;
    align-items: center;
    background: #fafafa;
  }
  
  .product-img {
    width: 80px;
    height: 80px;
    object-fit: contain;
    background: white;
    padding: 5px;
    border-radius: 6px;
    border: 1px solid #eee;
  }
  
  .product-info h3 { margin: 0 0 0.5rem 0; font-size: 1.2rem; }
  .product-info p { margin: 0 0 1rem 0; font-size: 0.9rem; color: #666; }
  
  .btn-check-price {
    display: inline-block;
    background: #FF9900; /* Amazon Orange */
    color: white !important;
    text-decoration: none !important;
    padding: 0.6rem 1.2rem;
    border-radius: 6px;
    font-weight: 600;
    font-size: 0.9rem;
    transition: background 0.2s;
  }
  
  .btn-check-price:hover {
    background: #e68a00;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .post-container { padding: 1.5rem 1rem; }
    .post-article { padding: 1.5rem; }
    .post-title { font-size: 2rem; }
    
    .product-card-mini {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }
    
    .btn-check-price {
      display: block;
      width: 100%;
    }
  }
</style>
