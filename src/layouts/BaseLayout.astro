import { SITE_CONFIG } from '../config';
import SEO from '../components/SEO.astro';
import GoogleAnalytics from '../components/GoogleAnalytics.astro';
import AffiliateBanner from '../components/AffiliateBanner.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  article?: boolean;
  noindex?: boolean;
  showAffiliateBanner?: boolean;
}

const {
  title = SITE_CONFIG.title,
  description = SITE_CONFIG.description,
  image = SITE_CONFIG.ogImage,
  article = false,
  noindex = false,
  showAffiliateBanner,
} = Astro.props;

const shouldShowAffiliateBanner = typeof showAffiliateBanner === 'boolean' ? showAffiliateBanner : article;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Favicon - Multiple formats for better compatibility -->
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png?v=2" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon.png?v=2" />
    <link rel="shortcut icon" href="/favicon.png?v=2" />
    <link rel="apple-touch-icon" href="/logo-icon.png?v=2" />
    
    <link rel="canonical" href={canonicalURL} />
    
    <!-- SEO Component -->
    <SEO 
      title={title}
      description={description}
      image={image}
      article={article}
      noindex={noindex}
      canonicalURL={canonicalURL.href}
    />
    
    <!-- Google Analytics -->
    <GoogleAnalytics />
    
    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://www.google-analytics.com" />
    <link rel="preconnect" href="https://www.googletagmanager.com" />
    
    <!-- Generator tag -->
    <meta name="generator" content={Astro.generator} />
  </head>
  
  <body>
    <!-- Header/Navigation -->
    <Header />
    
    <!-- Affiliate Disclosure Banner (if needed) -->
    {shouldShowAffiliateBanner && <AffiliateBanner />}
    
    <!-- Main Content -->
    <main>
      <slot />
    </main>
    
    <!-- Footer -->
    <Footer />
    
    <style is:global>
      :root {
        --color-primary: #2563eb;
        --color-primary-dark: #1e40af;
        --color-primary-light: #3b82f6;
        
        --color-action: #f97316;
        --color-action-dark: #ea580c;
        --color-action-light: #fb923c;
        
        --color-success: #10b981;
        --color-success-dark: #059669;
        --color-success-light: #34d399;
        
        --color-text: #1f2937;
        --color-text-light: #6b7280;
        --color-text-lighter: #9ca3af;
        --color-bg: #ffffff;
        --color-bg-alt: #f9fafb;
        --color-border: #e5e7eb;
        
        --color-warning: #f59e0b;
        --color-danger: #ef4444;
        --color-info: #3b82f6;
        
        --max-width: 1200px;
        --spacing: 1rem;
        
        --font-sans: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        --font-mono: 'SF Mono', Monaco, 'Cascadia Code', monospace;
      }
      
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        font-family: var(--font-sans);
        line-height: 1.6;
        color: var(--color-text);
        background: var(--color-bg);
      }
      
      .container {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 0 var(--spacing);
      }
    </style>
  </body>
</html>
